#Build stage
FROM node:20-alpine AS build

WORKDIR /app

COPY package*.json .

RUN npm install

COPY . .

RUN npm run build

#Production stage
FROM node:20-alpine AS production

WORKDIR /app

COPY package*.json .

RUN npm install --production
RUN npm i -g serve

COPY --from=build /app/dist ./dist
EXPOSE 4000
CMD [ "serve", "-s", "dist" ]
